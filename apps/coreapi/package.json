    "edgedb": "^1.4.1",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "ms": "^2.1.3",
    "nest-typed-config": "^2.9.2",
    "nestjs-pino": "^3.5.0",
    "nestjs-temporal": "^2.0.1",
    "nestjs-typebox": "^2.6.1",
    "nodemon": "^3.0.2",
    "normalize-text": "^2.4.1",
    "paseto": "^3.1.4",
    "passport-github2": "^0.1.12",
    "pino": "^8.17.1",
    "pino-http": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sleep-promise": "^9.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@edgedb/generate": "^0.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@treblestreet-packages/eslint-config": "*",
    "@treblestreet-packages/typescript-config": "*",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nestjs-spelunker": "^1.3.0",
    "pino-pretty": "^10.3.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "dbschema"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "npm run start:api:dev | pino-pretty"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
